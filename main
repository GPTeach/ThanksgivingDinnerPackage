<body>
    <div class="container">
        <h1>Select Your Thanksgiving Dinner Package</h1>
        <div class="dinner-option">
            <input type="checkbox" id="turkey" name="turkey">
            <label for="turkey">Turkey</label>
        </div>
        <div class="dinner-option">
            <input type="checkbox" id="mashedPotatoes" name="mashedPotatoes">
            <label for="mashedPotatoes">Mashed Potatoes</label>
        </div>
        <div class="dinner-option">
            <input type="checkbox" id="gravy" name="gravy">
            <label for="gravy">Gravy</label>
        </div>
        <!-- Add more options as needed -->
        <button onclick="confirmSelection()">Confirm Selection</button>
        <p id="selectionResult"></p>
    </div>

    <script>
        function confirmSelection() {
            var selectedItems = [];
            var checkboxes = document.querySelectorAll('input[type=checkbox]:checked');
            for (var checkbox of checkboxes) {
                selectedItems.push(checkbox.name);
            }
            document.getElementById("selectionResult").innerText = "You have selected: " + selectedItems.join(", ");
        }
    </script>
